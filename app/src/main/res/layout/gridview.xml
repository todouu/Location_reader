<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_gridView"
    tools:context="todou.firstapp.Gridview">

    <TextView
        android:text="1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/gridviewText1"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:text="2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/gridviewText2"
        android:layout_row="1"
        android:layout_column="1" />
    <TextView
        android:text="3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/gridviewText3"
        android:layout_row="2"
        android:layout_column="2" />
    <TextView
        android:text="4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/gridviewText4"
        android:layout_row="1"
        android:layout_column="3" />
    <TextView
        android:text="5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/gridviewText5"
        android:layout_row="0"
        android:layout_column="4" />

</GridLayout>